<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="controller.AddPlaceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Place"
        android:id="@+id/addPlace_title"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#455A64" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPlace_name_input"
        android:layout_below="@+id/addPlace_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:hint="Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPlace_address_input"
        android:layout_below="@+id/addPlace_name_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPlace_type_input"
        android:layout_below="@+id/addPlace_address_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:hint="Type" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPlace_phone_input"
        android:layout_below="@+id/addPlace_type_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPlace_description_input"
        android:layout_below="@+id/addPlace_phone_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Description" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Save"
        android:id="@+id/addPlace_save_button"
        android:layout_below="@+id/addPlace_description_input"
        android:layout_centerHorizontal="true"
        android:background="#E91E63"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:onClick="saveButtonOnClick" />
</RelativeLayout>
